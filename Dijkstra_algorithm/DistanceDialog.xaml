<Window x:Class="Dijkstra_algorithm.DistanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите вес ребра" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closing="Window_Closing" Loaded="Window_Loaded"
        Height="170"
        Width="400"
        Style="{StaticResource VS2012WindowStyle}" WindowStyle="None" ShowInTaskbar="True">
    <Grid>
        <Label FontFamily="Rockwell" FontSize="24" Content="Distance:" Height="41" HorizontalAlignment="Left" Margin="14,28,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="41" FontSize="24" FontFamily="Rockwell" Margin="131,28,10,0" Name="distanceTextBox" VerticalAlignment="Top" TabIndex="1" />
        <Button FontFamily="Rockwell" FontSize="20" Background="#FFFE696B" Content="OK" Height="40" HorizontalAlignment="Right" Margin="0,91,253,0" Name="okBtn" VerticalAlignment="Top" Width="98" Click="okBtn_Click" TabIndex="2" IsDefault="True" BorderBrush="#00000000" BorderThickness="0" />
        <Button FontFamily="Rockwell" FontSize="20" Background="#FFFE696B" Content="Cancel" Height="40" HorizontalAlignment="Right" Margin="0,91,70,0" Name="cancelBtn" VerticalAlignment="Top" Width="101" IsCancel="True" TabIndex="3" BorderBrush="#00000000" BorderThickness="0" />
    </Grid>
</Window>
